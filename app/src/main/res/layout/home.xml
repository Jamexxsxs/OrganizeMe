<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:elevation="10dp"
        android:background="@color/white"
        android:gravity="center">


        <ImageView
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:src="@drawable/selected_list"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:src="@drawable/add_list"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="30dp"
            android:clickable="true"
            android:focusable="true"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:src="@drawable/calendar_icon"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#878af5"
            android:paddingTop="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_gravity="center">

                <ImageView
                    android:id="@+id/dashboard_button"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:src="@drawable/dashboard"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_marginLeft="20dp"/>


                <EditText
                    android:layout_width="150dp"
                    android:layout_height="28dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:layout_weight="1"
                    android:background="@drawable/round_corner"
                    android:fontFamily="@font/poppins"
                    android:foregroundGravity="center"
                    android:hint="Search Task"
                    android:paddingLeft="10dp"
                    android:inputType="textShortMessage"
                    android:textSize="12sp" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:src="@drawable/sort"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_marginRight="20dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:paddingTop="18dp"
                android:layout_marginLeft="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/open_sans_light"
                    android:text="Today, 1 May"
                    android:textColor="#f5f5f5"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:text="My Tasks"
                    android:textColor="#f5f5f5"
                    android:textSize="20sp"
                    android:layout_marginTop="4dp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="100dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/list_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="20dp"
                    android:paddingLeft="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins"
                        android:text="Today"
                        android:textColor="#31446c"
                        android:textSize="18sp"
                        android:layout_marginTop="4dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/round_corner"
                        android:fontFamily="@font/open_sans"
                        android:gravity="center"
                        android:padding="12dp"
                        android:text="Cheers! No tasks today."
                        android:textColor="#f5a921"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="20dp"
                    android:paddingLeft="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins"
                        android:text="Tomorrow"
                        android:textColor="#31446c"
                        android:textSize="18sp"
                        android:layout_marginTop="4dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/round_corner"
                        android:fontFamily="@font/open_sans"
                        android:gravity="center"
                        android:padding="12dp"
                        android:text="Cheers! No tasks tomorrow."
                        android:textColor="#f5a921"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="20dp"
                    android:paddingLeft="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins"
                        android:text="This week"
                        android:textColor="#31446c"
                        android:textSize="18sp"
                        android:layout_marginTop="4dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/round_corner"
                        android:fontFamily="@font/open_sans"
                        android:gravity="center"
                        android:padding="12dp"
                        android:text="Cheers! No tasks this week."
                        android:textColor="#f5a921"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="20dp"
                    android:paddingLeft="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins"
                        android:text="This month"
                        android:textColor="#31446c"
                        android:textSize="18sp"
                        android:layout_marginTop="4dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/round_corner"
                        android:fontFamily="@font/open_sans"
                        android:gravity="center"
                        android:padding="12dp"
                        android:text="Cheers! No tasks this month."
                        android:textColor="#f5a921"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</FrameLayout>